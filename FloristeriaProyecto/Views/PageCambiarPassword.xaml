<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FloristeriaProyecto.Views.PageCambiarPassword">
    <ContentPage.Content>
        <StackLayout Padding="16">
            <Label Text="Cambiar Password"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                   FontSize="Large"/>
            <Entry Placeholder="Nueva Contraseña" x:Name="txtPassword" IsPassword="True"></Entry>
            <Entry Placeholder="Confirm password" x:Name="txtConfirmar" IsPassword="True"></Entry>
            <Button Text="Change Password" x:Name="btnCambiarPassword"
                    Clicked="btnCambiarPassword_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>